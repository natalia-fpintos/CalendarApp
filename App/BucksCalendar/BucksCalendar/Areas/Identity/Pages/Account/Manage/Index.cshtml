@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="profile-content">
    <h4>@ViewData["Title"]</h4>
    <partial name="_StatusMessage" model="Model.StatusMessage" />
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ProfileImage" alt="Profile Image" id="profile-image" />
            <div class="form-card profile-form">
                <form id="profile-form" method="post" enctype="multipart/form-data">
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label asp-for="Username" class="card-form-label"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Username" class="form-control" disabled />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label asp-for="Input.Name" class="card-form-label"></label>
                            <span class="asterisk"> *</span>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Input.Name" class="form-control" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label asp-for="Input.Image" class="card-form-label"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Input.Image" class="form-control" type="file" accept=".png,.jpg,.jpeg"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label asp-for="Input.PhoneNumber" class="card-form-label"></label>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}