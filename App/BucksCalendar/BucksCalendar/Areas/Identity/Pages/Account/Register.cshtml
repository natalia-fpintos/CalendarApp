@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign up";
}

<div class="page-content">
    <h4 class="page-title">Create an account</h4>
    <div class="form-card">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form">
            <div class="form-fields">
                <div class="form-column">
                    <div class="form-group">
                        <label asp-for="Input.Name"></label>
                        <input asp-for="Input.Name" class="form-control"/>
                        <div class="field-validation-error">
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Role"></label>
                        <input asp-for="Input.Role" class="form-control"/>
                        <div class="field-validation-error">
                            <span asp-validation-for="Input.Role" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control"/>
                        <div class="field-validation-error">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>                    
                    </div>
                </div>
                <div class="form-column">
                    <div class="form-group">
                        <label asp-for="Input.PhoneNumber"></label>
                        <input asp-for="Input.PhoneNumber" class="form-control"/>
                        <div class="field-validation-error">
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control"/>
                        <div class="field-validation-error">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control"/>
                        <div class="field-validation-error">
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-bottom-section">
                <button type="submit" class="btn btn-primary">Sign up</button>
                <div class="form-redirect-text">
                    <span>Already have an account? </span>
                    <a asp-area="Identity" asp-page="/Account/Login" class="redirect-link">Log in here!</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
