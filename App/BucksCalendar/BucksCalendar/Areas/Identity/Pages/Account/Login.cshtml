@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="page-content">
    <h4 class="page-title">Log in to your account</h4>
    <div class="form-card form-card-login">
        <form id="account" method="post" class="form">
            <div class="form-fields">
                <div class="form-column form-column-login">
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <div class="field-validation-error">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        <div class="field-validation-error">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger form-errors"></div>
                </div>
            </div>
            <div class="form-bottom-section">
                <button type="submit" class="btn btn-primary">Log in</button>
                <div class="form-redirect-text">
                    <span>Don't have an account? </span>
                    <a asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Model.ReturnUrl" class="redirect-link">Sign up here!</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
