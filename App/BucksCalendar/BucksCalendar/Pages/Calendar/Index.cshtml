@page
@model BucksCalendar.Pages.Calendar.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="page-content">
    <div class="calendar-header">
        <h4 class="page-title">
            <span id="chosen-month"></span>
            <span id="chosen-year"></span>
        </h4>
        <div id="calendar-navigator">
            <a asp-page="Create" class="btn btn-outline-primary" id="add">+</a>
            <form class="form-inline" method="get">
                <select class="selectpicker form-control" name="month" id="month">
                    <option value=0>Jan</option>
                    <option value=1>Feb</option>
                    <option value=2>Mar</option>
                    <option value=3>Apr</option>
                    <option value=4>May</option>
                    <option value=5>Jun</option>
                    <option value=6>Jul</option>
                    <option value=7>Aug</option>
                    <option value=8>Sep</option>
                    <option value=9>Oct</option>
                    <option value=10>Nov</option>
                    <option value=11>Dec</option>
                </select>
                <label for="year"></label>
                <select class="selectpicker form-control" name="year" id="year">
                    <option value=2019>2019</option>
                    <option value=2020>2020</option>
                    <option value=2021>2021</option>
                    <option value=2022>2022</option>
                    <option value=2023>2023</option>
                    <option value=2024>2024</option>
                    <option value=2025>2025</option>
                    <option value=2026>2026</option>
                    <option value=2027>2027</option>
                    <option value=2028>2028</option>
                    <option value=2029>2029</option>
                    <option value=2030>2030</option>
                </select>
                <button type="submit" class="btn btn-outline-primary go-button">Go!</button>
            </form>
            <button class="btn btn-outline-primary" id="previous">&lt;</button>
            <button class="btn btn-outline-primary" id="today">Today</button>
            <button class="btn btn-outline-primary" id="next">&gt;</button>
        </div>
    </div>
    <div class="main-calendar-card calendar-card">
        <table class="table table-bordered" id="calendar">
            <thead id="calendar-head">
            <tr id="weekdays">
                <th>Sunday</th>
                <th>Monday</th>
                <th>Tuesday</th>
                <th>Wednesday</th>
                <th>Thursday</th>
                <th>Friday</th>
                <th>Saturday</th>
            </tr>
            </thead>
            <tbody id="calendar-body"></tbody>
        </table>
    </div>
</div>


<table class="table" hidden>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Category)
            </th>
            <th>
                Start date
            </th>
            <th>
                End date
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Title)
            </th>
        </tr>
    </thead>
    <tbody id="events">
@foreach (var item in Model.Event) {
        <tr>
            <td class="event-category">
                @Html.DisplayFor(modelItem => item.Category.Type)
            </td>
            <td class="event-start-date">
                @item.StartDateTime.ToString("yyyy-MM-dd")
            </td>
            <td class="event-end-date">
                @item.EndDateTime.ToString("yyyy-MM-dd")
            </td>
            <td class="event-title">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
        </tr>
}
    </tbody>
</table>
