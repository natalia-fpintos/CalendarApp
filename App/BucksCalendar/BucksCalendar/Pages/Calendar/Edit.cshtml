@page
@using BucksCalendar.Models
@model BucksCalendar.Pages.Calendar.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="page-content">
    <h4 class="page-title">Edit event</h4>
    <div class="calendar-card details-card">
        <form class="calendar-card-form" method="post">
            <div class="card-body-form">
                <input type="hidden" asp-for="Event.EventID"/>
                <div class="form-group row">
                    <label asp-for="Input.Title" class="col-sm-4 col-form-label card-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Input.Title" class="form-control"/>
                        <span asp-validation-for="Input.Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Input.AllDayEvent" class="col-sm-4 col-form-label card-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Input.AllDayEvent" class="form-control" id="all-day-event-tickbox"/>
                        <span asp-validation-for="Input.AllDayEvent" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Input.StartDateTime" class="col-sm-4 col-form-label card-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Input.StartDateTime" class="form-control" id="start-date"/>
                        <span asp-validation-for="Input.StartDateTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Input.EndDateTime" class="end-date col-sm-4 col-form-label card-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Input.EndDateTime" class="end-date form-control" id="end-date"/>
                        <span asp-validation-for="Input.EndDateTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Input.Location" class="col-sm-4 col-form-label card-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Input.Location" class="form-control"/>
                        <span asp-validation-for="Input.Location" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Input.CategoryID" class="col-sm-4 col-form-label card-form-label"></label>
                    <div class="col-sm-8">
                        <select asp-for="Input.CategoryID" class="selectpicker form-control">
                            <option value="1">@Categories.Lecture</option>
                            <option value="2">@Categories.Deadline</option>
                            <option value="3">@Categories.WFH</option>
                            <option value="4">@Categories.AnnualLeave</option>
                            <option value="5">@Categories.BankHoliday</option>
                        </select>
                        <span asp-validation-for="Input.CategoryID" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 card-form-label">Notify by</label>
                    <div class="col-sm-8">
                        <div class="form-check form-check-inline">
                            <input asp-for="Input.NotifyBySMS" class="form-check-input notify-tickbox" id="notify-checkbox-sms"/>
                            <label class="form-check-label" for="notify-checkbox-sms">SMS</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input asp-for="Input.NotifyByEmail" class="form-check-input notify-tickbox" id="notify-checkbox-email"/>
                            <label class="form-check-label" for="notify-checkbox-email">Email</label>
                        </div>
                    </div>
                </div>
                <div class="form-group row" id="scheduled-for-field">
                    <label asp-for="Input.ScheduledFor" class="end-date col-sm-4 col-form-label card-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Input.ScheduledFor" class="form-control" id="scheduled-for"/>
                        <span asp-validation-for="Input.ScheduledFor" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group row">
                    <label asp-for="Input.Description" class="col-sm-4 col-form-label card-form-label"></label>
                    <div class="col-sm-8">
                        <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="card-bottom-links">
                <a asp-page="./Index">Back to calendar</a>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" id="submit-btn"/>
                </div>
            </div>
        </form>
    </div>
</div>

    @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
